{
    "name": "contract",
    "version": "0.0.1",
    "description": "Artifaqt smart contracts",
    "main": "truffle.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "dev": "docker run -d --name ganache -p 7545:8545 trufflesuite/ganache-cli:latest --seed=42 --gasPrice=1 --networkId=42",
        "dev-start": "docker start ganache",
        "dev-stop": "docker rm -f ganache",
        "compile": "truffle compile",
        "migrate": "truffle migrate --network=ganache --reset",
        "test": "truffle test --network=ganache",
        "test:artifaqt": "truffle test --network=ganache ./test/artifaqt/*",
        "fix:js": "eslint --fix test/** migrations/**",
        "lint:js": "eslint test/** migrations/**",
        "lint:sol": "solhint contracts/*.sol contracts/*/*.sol test/*.sol test/*/*.sol",
        "lint": "npm run lint:js && npm run lint:sol",
        "coverage": "solidity-coverage"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "coveralls": "^3.0.2",
        "eslint": "^5.6.1",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-mocha": "^5.2.0",
        "eslint-plugin-react": "^7.11.1",
        "solidity-coverage": "^0.5.11",
        "stats-lite": "^2.2.0",
        "truffle": "^4.1.14",
        "truffle-hdwallet-provider": "0.0.6"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:ConsenSys/artifaqt.git"
    },
    "keywords": [
        "ethereum",
        "solidity"
    ],
    "authors": [
        "Daniel Luca <daniel.luca@consensys.net>"
    ]
}
